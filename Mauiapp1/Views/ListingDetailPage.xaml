<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mauiapp1.Views.ListingDetailPage"
             Title="Item Details">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="15" MaximumWidthRequest="800">

            <!-- Item Image -->
            <Frame Padding="0" 
                   CornerRadius="8" 
                   IsClippedToBounds="True" 
                   HeightRequest="250"
                   HasShadow="False"
                   BorderColor="LightGray">
                <Image Source="{Binding ImageUrl}"
                       Aspect="AspectFill"
                       HorizontalOptions="Fill"
                       VerticalOptions="Fill"/>
            </Frame>

            <!-- Item Title -->
            <Label Text="{Binding Title}" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   LineBreakMode="WordWrap"
                   MaxLines="2"/>

            <!-- Price -->
            <Label Text="{Binding Price, StringFormat='${0:N2}'}" 
                   FontSize="28" 
                   TextColor="#4CAF50"
                   FontAttributes="Bold"/>

            <!-- Condition and Category -->
            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5" RowSpacing="10">
                <Label Grid.Row="0" Grid.Column="0" 
                       Text="Condition:" 
                       FontAttributes="Bold"
                       VerticalOptions="Start"/>
                <Label Grid.Row="0" Grid.Column="1" 
                       Text="{Binding Condition}" 
                       LineBreakMode="WordWrap"
                       VerticalOptions="Start"/>

                <!-- Category -->
                <Label Grid.Row="1" Grid.Column="0" 
                       Text="Category:" 
                       FontAttributes="Bold"
                       VerticalOptions="Start"/>
                <Label Grid.Row="1" Grid.Column="1" 
                       Text="{Binding Category}" 
                       LineBreakMode="WordWrap"
                       VerticalOptions="Start"/>

                <!-- Seller -->
                <Label Grid.Row="2" Grid.Column="0" 
                       Text="Seller:" 
                       FontAttributes="Bold"
                       VerticalOptions="Start"/>
                <Label Grid.Row="2" Grid.Column="1" 
                       Text="{Binding SellerName}" 
                       LineBreakMode="WordWrap"
                       VerticalOptions="Start"/>
            </Grid>

            <!-- Description Header -->
            <Label Text="Description" 
                   FontSize="18" 
                   FontAttributes="Bold" 
                   Margin="0,10,0,0"/>

            <!-- Description -->
            <Frame BorderColor="LightGray" 
                   Padding="15" 
                   CornerRadius="8"
                   HasShadow="False">
                <Label Text="{Binding Description}" 
                       LineBreakMode="WordWrap"/>
            </Frame>

            <!-- Contact Seller Button -->
            <Button Text="Contact Seller" 
                    BackgroundColor="#FF9800" 
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="50"
                    FontAttributes="Bold"
                    Margin="0,10,0,10" 
                    HorizontalOptions="Fill"
                    Clicked="OnContactSellerClicked"/>

            <!-- Make Offer Button -->
            <Button Text="Make Offer" 
                    BackgroundColor="#2196F3" 
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="50"
                    FontAttributes="Bold"
                    Margin="0,0,0,20"
                    HorizontalOptions="Fill"
                    Clicked="OnMakeOfferClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>