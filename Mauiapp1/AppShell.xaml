<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Mauiapp1"
       x:Class="Mauiapp1.AppShell"
       Title="Mauiapp1">

    <Shell.TitleView>
        <StackLayout Orientation="Horizontal">
            <Label Text="" 
                   FontFamily="Jockman"
                   FontSize="40"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </StackLayout>
    </Shell.TitleView>

    <!-- Define the routes in the Shell visual hierarchy -->
    <ShellContent 
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <ShellContent 
        Title="Register"
        ContentTemplate="{DataTemplate local:RegisterPage}"
        Route="RegisterPage" />

    <ShellContent 
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <!-- Profile Page - using the correct namespace for your project structure -->
    <ShellContent 
        Title="Profile"
        ContentTemplate="{DataTemplate local:ProfilePage}"
        Route="ProfilePage" />

    <!-- Define other pages that should be navigable as part of the main tab structure -->
</Shell>