<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mauiapp1.MainPage"
             Title="Main Page">

    <!-- Use a Grid as the root layout -->
    <Grid RowDefinitions="*, Auto">
        <!-- Main Content ScrollView -->
        <ScrollView Grid.Row="0">
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                  ColumnDefinitions="*"
                  Padding="10">

                <!-- Search Bar -->
                <SearchBar Grid.Row="0"
                           x:Name="MainSearchBar"
                           Placeholder="Search for items..."
                           SearchButtonPressed="OnSearchButtonPressed"
                           BackgroundColor="LightGray"
                           Margin="0,0,0,10"/>

                <!-- Categories Section -->
                <StackLayout Grid.Row="1"
                     Orientation="Horizontal"
                     HorizontalOptions="Center"
                     Spacing="20"
                     Margin="0,0,0,10">

                    <!-- Category Buttons (First Row) -->
                    <Button Text="Watches"
                    BackgroundColor="LightBlue"
                    TextColor="Black"        
                    CornerRadius="10"
                    WidthRequest="100"
                    HeightRequest="100"
                    Clicked="OnCategoryClicked"/>

                    <Button Text="Cars"
                    BackgroundColor="LightGreen"
                    TextColor="Black"         
                    CornerRadius="10"
                    WidthRequest="100"
                    HeightRequest="100"
                    Clicked="OnCategoryClicked"/>

                    <Button Text="Electronics"
                    BackgroundColor="LightPink"
                    TextColor="Black"         
                    CornerRadius="10"
                    WidthRequest="100"
                    HeightRequest="100"
                    Clicked="OnCategoryClicked"/>
                </StackLayout>

                <!-- Second Row of Categories (Initially Hidden) -->
                <StackLayout x:Name="SecondRowCategories"
                     Grid.Row="2"
                     Orientation="Horizontal"
                     HorizontalOptions="Center"
                     Spacing="20"
                     Margin="0,0,0,10"
                     IsVisible="false">

                    <Button Text="Toys"
                    BackgroundColor="LightCoral"
                    TextColor="Black" 
                    CornerRadius="10"
                    WidthRequest="100"
                    HeightRequest="100"
                    Clicked="OnCategoryClicked"/>

                    <Button Text="Books"
                    BackgroundColor="LightGray"
                    TextColor="Black"         
                    CornerRadius="10"
                    WidthRequest="100"
                    HeightRequest="100"
                    Clicked="OnCategoryClicked"/>

                    <Button Text="Home Appliances"
                    BackgroundColor="LightGoldenrodYellow"
                    TextColor="Black"         
                    CornerRadius="10"
                    WidthRequest="100"
                    HeightRequest="100"
                    Clicked="OnCategoryClicked"/>
                </StackLayout>

                <!-- See More Button -->
                <Button Grid.Row="3"
                x:Name="SeeMoreButton"
                Text="See More"
                HorizontalOptions="Center"
                Margin="0,0,0,10"
                Clicked="OnSeeMoreClicked"/>

                <!-- Listings Section -->
                <CollectionView Grid.Row="4"
                                x:Name="ListingsCollection"
                                ItemsSource="{Binding Listings}"
                                SelectionMode="Single"
                                SelectionChanged="OnListingSelected"
                                HeightRequest="500">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical"
                                         Span="2"
                                         VerticalItemSpacing="10"
                                         HorizontalItemSpacing="10"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="5">
                                <Frame Padding="0"
                                       CornerRadius="10"
                                       HasShadow="True"
                                       BorderColor="LightGray">
                                    <Grid RowDefinitions="*, Auto">
                                        <!-- Item Image -->
                                        <Image Grid.Row="0"
                                               Source="{Binding ImageUrl}"
                                               Aspect="AspectFill"
                                               HeightRequest="150"/>

                                        <!-- Item Info -->
                                        <StackLayout Grid.Row="1"
                                                     BackgroundColor="White"
                                                     Padding="8">
                                            <Label Text="{Binding Title}"
                                                   FontAttributes="Bold"
                                                   LineBreakMode="TailTruncation"/>
                                            <Label Text="{Binding Price, StringFormat='${0:N0}'}"
                                                   TextColor="Green"/>
                                        </StackLayout>
                                    </Grid>
                                </Frame>

                                <!-- Add a tap gesture recognizer as an alternative way to handle selection -->
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnListingTapped" CommandParameter="{Binding .}"/>
                                </Grid.GestureRecognizers>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </ScrollView>

        <!-- Fixed Profile Button (Outside ScrollView) -->
        <Grid Grid.Row="1" HeightRequest="80">
            <ImageButton 
                Source="profile.png"
                BackgroundColor="#FFFFFF"
                WidthRequest="56"
                HeightRequest="56"
                CornerRadius="28"
                HorizontalOptions="End"
                VerticalOptions="Center"
                Margin="0,10,15,10"
                Clicked="OnProfileClicked"/>
        </Grid>
    </Grid>
</ContentPage>